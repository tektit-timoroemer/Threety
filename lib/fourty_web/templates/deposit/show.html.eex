<h1><%= dgettext("deposits","show") %></h1>
<div class="row row-cols-auto">
  <div class="col-sm-3 p-3 border bg-light">

    <%= my_label("accounts", "Account") %>
    <%= my_text_link(@deposit.account.label, Routes.account_path(@conn, :show,
        @deposit.account.id)) %><br />

    <%= my_label("orders", "order") %>
    <%= if @deposit.order_id, do: my_text_link(@deposit.order.label, Routes.order_path(@conn,
        :show, @deposit.order.id)) %><br />

    <div class="row align-items-end">
      <div class="col-sm-6">
       <%= my_label("deposits", "amount_cur") %>
      </div>
      <div class="col-sm-6">
        <%= my_label("deposits", "amount_dur") %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <%= my_currency_value(@deposit.amount_cur) %>
      </div>
      <div class="col-sm-6">
        <%= my_duration_value(@deposit.amount_dur) %><br />
      </div>
    </div>

    <%= my_label("deposits", "label_long") %>
    <%= my_longtext_value(@deposit.label) %><br />

    <%= my_action("global", "edit", Routes.deposit_path(@conn, :edit, @deposit)) %>
