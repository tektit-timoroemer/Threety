<h1><%= dgettext("orders","show") %></h1>
<div class="row row-cols-auto">
  <div class="col-sm-3 p-3 border bg-light">

    <%= my_label("clients", "name") %>
    <%= my_text_link(@order.project.client.name,
        Routes.client_path(@conn, :show, @order.project.client.id)) %><br />

    <%= my_label("projects", "name") %>
    <%= my_text_link(@order.project.name,
        Routes.project_path(@conn, :show, @order.project.id)) %><br />

    <%= my_label("orders", "description") %>
    <%= my_longtext_value(@order.description) %><br />

    <%= my_label("orders", "date_eff") %>
    <%= my_date_value(@order.date_eff) %><br />

    <%= my_label("orders", "amount_cur") %>
    <%= my_currency_value(@order.amount_cur) %><br />

    <%= my_label("orders", "amount_dur") %>
    <%= my_duration_value(@order.amount_dur) %><br />

    <%= my_action("global", "edit", Routes.order_path(@conn, :edit, @order)) %>
    <%= my_action("orders", "index", Routes.order_path(@conn, :index)) %>
    <%= my_action("deposits", "transfer", Routes.deposit_path(@conn, :new, @order.id)) %>
  </div>
</div>