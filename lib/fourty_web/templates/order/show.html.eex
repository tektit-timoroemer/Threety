<h1><%= dgettext("orders","show") %></h1>
<div class="row row-cols-auto">
  <div class="col-sm-3 p-3 border bg-light">

    <%= my_label("clients", "label") %>
    <%= my_text_link(@order.project.client.label,
        Routes.client_path(@conn, :show, @order.project.client.id)) %><br />

    <%= my_label("projects", "label") %>
    <%= my_text_link(@order.project.label,
        Routes.project_path(@conn, :show, @order.project.id)) %><br />

    <%= my_label("orders", "label") %>
    <%= my_longtext_value(@order.label) %><br />

    <%= my_label("orders", "date_eff") %>
    <%= my_date_value(@order.date_eff) %><br />

    <div class="row align-items-end">
        <div class="col-sm-6">
            <%= my_label("orders", "amount_cur") %>
        </div>
        <div class="col-sm-6">
            <%= my_label("orders", "amount_dur") %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <%= my_currency_value(@order.amount_cur) %>
        </div>
        <div class="col-sm-6">
            <%= my_duration_value(@order.amount_dur) %><br />
        </div>
    </div>

    <%= my_action("global", "edit", Routes.order_path(@conn, :edit, @order)) %>
    <%= my_action("orders", "index", Routes.order_path(@conn, :index)) %>
    <%= my_action("deposits", "transfer", Routes.deposit_path(@conn, :new_order, @order.id)) %>
  </div>
</div>